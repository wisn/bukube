!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %meta{name: 'X-UA-Compatible', content: 'IE=edge'}
    %title Masuk ke Bukube
    %link{rel: 'stylesheet', type: 'text/css', href: '/css/default.css'}
    %link{rel: 'stylesheet', type: 'text/css', href: 'https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css'}
    %link{rel: 'stylesheet', type: 'text/css', href: 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'}
  %body.login-page
    %header
      %nav.navbar.navbar-light.navbar-expand-lg.fixed-top
        .container
          %a.navbar-brand{href: '/'} Bukube
          %button.navbar-toggler{type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbarNav', 'aria-controls': 'navbarNav', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation'}
            %span.navbar-toggle-icon
          .collapse.navbar-collapse#navbarNav
            %ul.navbar-nav.mr-auto
              %li.nav-item
                %a.nav-link{href: '/'} Beranda
              %li.nav-item
                %a.nav-link{href: '/'} Beli Buku
              %li.nav-item
                %a.nav-link{href: '/'} Jual Buku
            %ul.navbar-nav.ml-auto
              %li.nav-item
                %a.nav-link{href: '/register.html'} Registrasi
              %li.nav-item.active
                %a.nav-link{href: '/login.html'}
                  Masuk
                  %span.sr-only (saat ini)
    %main
      .container
        %form{name: 'login'}
          %h1
            Bukube
          %span.unique-underline{style: 'width: 75%'}
          %input{type: 'text', name: 'identifier', placeholder: 'Alamat Email/Nama Pengguna'}
          %input{type: 'password', name: 'password', placeholder: 'Kata Sandi'}
          %input{type: 'submit', value: 'Masuk'}
        .alert.alert-light
    %footer
      .container
        Hak cipta &copy; 2018, Bukube.
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js'}
    %script{src: '/js/application.js'}
